<template>
	<view class="p-base pb-0">
		<view class="uni-row input-wrapper p-base">
			<view class="flex-1">
			  <input class="uni-input" placeholder="输入直播名称" v-model="state.query.title" type="text"/>
			</view>
			<icon type="search" class=""></icon>
		</view>
	</view>
	<scroll-view 
		@scrolltolower="scrolltolower"
		style="flex:1"
	>
		<view class="p-base pt-0">
			<courseCard
				v-for="item in state.liveList"
				:key="item._id"
				:cardInfo="item"
				:url="`/pages/live/detail/index?id=${item._id}`"
			></courseCard>
		</view>
	</scroll-view>
	<!-- #ifdef APP -->
	<!-- #endif -->
</template>

<script setup lang="uts">
	import {onMounted} from 'vue'
	import courseCard from '@/pages/components/course-card/index.uvue'
	import {getCourses} from '@/pages/request/course'
	import {LiveType} from '@/pages/types/live'
import { getLiveList } from '@/pages/request/live'
	const state = reactive({
		query: {
			title: ''
		} as UTSJSONObject & {
			title: ''
		},
		liveList: [] as Array<LiveType>,
		page: 0,
		pageSize: 10,
		total: 0,
		loading: false
	})
	const loadData = () => {
		if(state.page > (state.total / state.pageSize)) {
			return
		}
		state.loading = true
		state.page += 1
		getLiveList({
			page: state.page,
			pageSize: state.pageSize,
			query: state.query
		}).then((res: {
			liveList: Array<LiveType>,
			total: number
		}) => {
			state.liveList.push(...res.liveList)
			state.total = res.total
		}).finally(() => {
			state.loading = false
		})
	}
	const scrolltolower = () => {
		loadData()
	}
	onMounted(() => {
		loadData()
	})
</script>

